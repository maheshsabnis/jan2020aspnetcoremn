@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>List of Roles</h2>
<a asp-action="Create">Create New Role</a>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var role in Model)
		{
		<tr>
			<td>@role.Id</td>
			<td>@role.Name</td>
		</tr>
		}

	</tbody>
</table>

